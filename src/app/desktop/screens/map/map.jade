          .img.twitter
        a.mini-link(target='_blank', href='https://discord.gg/s28HfU9')
          .img.discord
        a.mini-link(target='_blank', href='https://www.instagram.com/hens_world/')
          .img.instagram
    .rounded-section 

  .map-wrapper
    video#map-global
    .map-button(ng-repeat="village in mapList.list" ng-class="{'small': village.type === 'zone'}" href="{{village.label}}" class ="noJq {{village.class}}" on-last-repeat)
      .hot(ng-class="{'active':hotCount[village.label] > 0}") {{hotCount[village.label]}}
      .geoloc
      .circle
        .map-bg-wrapper
          a.map-background(href="{{village.url}}")
      .outer-circle
      .title(ng-bind-html="village.title")       
