.map-container
  .side-container
    .rounded-section
      h1 VOYAGEUR·SE·S
    .pop-container
      .pop-unit.wrapper.other-user(class="{{village.id}}" ng-repeat="village in popList")
        .fond-village(population-info pop-number="village.number" village="village.id")
    .rounded-section.crush-run-title(ng-if="currentEvent.slug == 'coupe-crushrun'")
      .main-title Coupe Crushrun
      .sub-title Rendez-vous au colisée d'Anar!
    .crush-run-scores(ng-if="currentEvent.slug == 'coupe-crushrun'")
      .crush-run-score(ng-repeat="score in crushrunScores" ng-class="{'king': score.king}" class="{{score.village}}")
        .value {{score.score}}
    .rounded-section
      h1(ng-show="currentEvent.slug !== 'hens_anniversary'") {{event.is_next == true ? "PROCHAIN ÉVÈNEMENT" : "ÉVÈNEMENT EN COURS"}}
      h1(ng-show="currentEvent.slug === 'hens_anniversary'") ÉVÈNEMENT SPÉCIAL
      next-event()
    .rounded-section
      saison-display
